<nav class="navbar bg-light">
  <h4> Simple Airbnb </h4>
  <%= link_to "Add a flat", new_flat_path, class: "btn btn-primary"%>
</nav>
<div class="container mt-3">
  <div class="row">
    <h1> All our flats </h1>
    <p> All <%= @flats.count%>
      <% if @flats.count > 1%>
        flats
      <% else %>
        flat
      <% end %>
    </p>
  </div>
  <div class="row" id="flats">
    <% @flats.each do |flat| %>
      <div class="col-4 mb-4">
        <div class="flat-card">
          <div class="card-image">
            <img src="<% flat.image_url %>" alt="image" class="img-fluid" />
          </div>
          <div class="card-body">
            <h4> <%= flat.name %> </h4>
            <p> <%= flat.address%> </p>
            <div>
              <i class="fa-solid fa-people-group"> </i> <%= flat.number_of_guests %>
              <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %>
            </div>
            <div class="mt-3">
              <%= link_to "Details", flat_path(flat), class: "btn btn-primary" %>
              <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-warning" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
